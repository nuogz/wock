{
	"compilerOptions": {
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"target": "esnext",
		"experimentalDecorators": true,
		"strict": true,
		"allowJs": true,
		"jsx": "preserve",
		"declaration": true,
		"declarationDir": "./types",
		"emitDeclarationOnly": true
	},
	"include": [
		"bases.d.ts",
		"**/*.js"
	],
	"exclude": [
		"eslint.config.js",
		"node_modules",
		"test"
	]
}
